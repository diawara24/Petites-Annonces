{% extends 'users.html.twig' %}

{% block title %}Modification du profil de
	{{app.user.fistname}}
	{{app.user.name}}
{% endblock %}

{% block body %}
	<div class="container p-4">
		<div class="col-xs4">
			<h1>Modification du mot de passe de {{app.user.fistname}} {{app.user.name}}</h1>
		</div>
         {% for message in app.flashes('message') %}
            <div class="col-xs4 " role="alert">
                <div class="p-3 my-2 rounded-2 error">{{ message }}</div>
            </div>
        {% endfor %}
		<form action="" method="post">
			<div class="form-field">
				<label for="password">Mot de passe</label>
				<input type="password" id="password" name="pass" class="form-control rounded-1" />
			</div>
            <div class="form-field">
				<label for="pass">Confirmer le mot de passe</label>
				<input type="password" id="pass" name="pass1" class="form-control rounded-1" />
			</div>
            <button class="btn blue">Valider</button>
		</form>

	</div>
{% endblock %}
