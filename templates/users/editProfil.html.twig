{% extends 'users.html.twig' %}

{% block title %}Modification du profil de {{app.user.fistname}} {{app.user.name}}
{% endblock %}

{% block body %}
	<div class="container p-4">
        <div class="col-xs4">
            <h1>Modification du profil de {{app.user.fistname}} {{app.user.name}}</h1>
        </div>
		{{form_start(formEditUser)}}
        {{form_row(formEditUser.name,{'label':'Name','attr':{'placeholder': "name ...", 'class': "form-control"}})}}
        {{form_row(formEditUser.fistname,{'label':'Fistname','attr':{'placeholder': "fistname ...", 'class': "form-control"}})}}
        <br>
        {{form_row(formEditUser.Valider,{'attr':{'class': "btn shadow-1 rounded-1 green"}})}}
        
        {{form_end(formEditUser)}}
	</div>
{% endblock %}
