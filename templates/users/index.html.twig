{% extends 'users.html.twig' %}

{% block title %}Profil de {{app.user.fistname}} {{app.user.name}}
{% endblock %}

{% block body %}
	<div class="grix xs4 container p-4">
        <div class="col-xs4">
            <h1>Profil de {{app.user.fistname}} {{app.user.name}}</h1>
        </div>
        {% for message in app.flashes('message') %}
        <div class="col-xs4 " role="alert">
            <div class="p-3 my-2 rounded-2 success">{{ message }}</div>
        </div>
    {% endfor %}
		<div class="col-xs1">Nom:</div>
		<div class="col-xs3">{{app.user.name}}</div>
        <div class="col-xs1">Prenom:</div>
		<div class="col-xs3">{{app.user.fistname}}</div>
        <div class="col-xs1">Email:</div>
		<div class="col-xs3">{{app.user.email}}</div>
		
        <div class="col-xs4">
        <a class="btn blue" href="{{path('users_profil_modifier')}}">Modifier le profil</a>
        <a class="btn blue" href="{{path('users_profil_editPassword')}}">Modifier le mot de passe</a>
        </div>

         <div class="col-xs4">
            <h1>Annoces de {{app.user.fistname}} {{app.user.name}} ({{ app.user.annonces | length }})</h1>
        </div>
        {% for annonce in app.user.annonces %}
            <div class="col-xs1">Titre:</div>
            <div class="col-xs3">{{annonce.title}}</div>
        {% endfor %}
	</div>
{% endblock %}
